<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xu.mortgageme.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="153dp"
        android:text="Helping you on your way to your dream home"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:textSize="32dp"
        android:text="MortgageMe!" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:text="How can we help you today?" />

    <Button
        android:id="@+id/btnloan"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="53dp"
        android:layout_marginStart="13dp"
        android:layout_toStartOf="@+id/btnmortgage"
        android:text="I'm a returning customer" />

    <Button
        android:id="@+id/btnmortgage"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginEnd="13dp"
        android:text="I'm a new customer"
        android:layout_alignTop="@+id/btnloan"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
